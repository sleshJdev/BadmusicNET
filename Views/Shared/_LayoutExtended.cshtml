<!DOCTYPE html>
<html>
<head runat="server">
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @using MvcSimpleMusicSite_CourseProject.Resources.Views.Shared;
    @using MvcSimpleMusicSite_CourseProject.Resources.Views;
</head>
<body>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span10">
                <div class="row-fluid">
                    <div class="span8">
                        <img class = "border-radius" src="@Url.Content("~/Content/Images/_logo.jpg")" alt="" />
                    </div>
                    <div class="span4">
                        <div class="setting">
                            @{Html.RenderPartial("_SettingPartial");}
                        </div>
                        <div class="logOn">
                            @{Html.RenderPartial("_LogOnPartial");}
                        </div>         
                        
                        <div id = "diagramm" class = "diagramm">
                              
                        </div>                
                    </div>
                </div>
                <div class="row-fluid ">
                    <div class="span8">
                        @{Html.RenderPartial("_SearchFormPartial");}
                    </div>
                    <div>
                        <img id = "img_upload" src="@Url.Content("~/Content/Images/Progress.gif")" alt=""/>
                    </div>
                </div>
            </div>
            <div class="span2">
                <div class="tagcloud" id="3dcloud_block">
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span9">
                @RenderBody()
            </div>
            <div class="span3">
                <div class="well sidebar-nav">
                    <ul class="nav nav-tabs nav-stacked">
                        <li class="nav-header">Навигация</li>
                        <li>@Html.ActionLink(@CommonRes.ActionMainPage, "Index", "Site")</li>
                        <li>@Html.ActionLink(@CommonRes.ActionAboutPage, "About", "Site")</li>
                        <li class="nav-header">Действия</li>
                        <li>@Html.ActionLink(@PagesAndLayotsRes.UploadFile, "Create", "Music")</li>               
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <div class="culture">
                <i>@PagesAndLayotsRes.Language</i>
            </div>
            <i>&copy slesh @( DateTime.Now.Year.ToString())</i>
        </div>
    </div>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-2.0.0.min.js")"></script>       
    <script type="text/javascript" src="@Url.Content("~/Content/scripts/dropdown.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/scripts/swfobject.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/scripts/scripts.js")"></script>                   
</body>
</html>
