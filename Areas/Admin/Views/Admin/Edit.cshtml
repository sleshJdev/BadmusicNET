@model MvcSimpleMusicSite_CourseProject.Models.Track
@{
    ViewBag.Title = "Редактирование";
}
<div class="pullmid">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend><i>Редактирование трека</i></legend>
            @Html.HiddenFor(model => model.Id)
            <div>
                @Html.LabelFor(model => model.Title)
            </div>
            <div>
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div>
                @Html.LabelFor(model => model.CreateAt)
            </div>
            <div>
                @Html.EditorFor(model => model.CreateAt)
                @Html.ValidationMessageFor(model => model.CreateAt)
            </div>
            <div>@Html.LabelFor(model => model.Mp3Url)</div>
            <div>
                @Html.EditorFor(model => model.Mp3Url)
                @Html.ValidationMessageFor(model => model.Mp3Url)
            </div>             
            <p>
                <input class="btn btn-primary" type="submit" value="Изменить" />
            </p>
        </fieldset>
    }
    <div>
        @Html.ActionLink("Вернуться к трекам", "Index")
    </div>
</div>
